@model TestPixelo.Models.Bet

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="grid-container">
        <div class="MatchDescription">
            <span>@Model.MatchDescription</span>
        </div>
        <div class="Rates">
            <span>@Model.RateOne</span>
            <span>@Model.RateDraw</span>
            <span>@Model.RateTwo</span>
        </div>
        <div class="Options">
            @Html.ActionLink("Edit", "Edit", new { id = Model.ID }, new { @class = "btn btn-warning" })
            @Html.ActionLink("Go Back", "Index", new { @class = "btn btn-info" })
        </div>
    </div>
</div>