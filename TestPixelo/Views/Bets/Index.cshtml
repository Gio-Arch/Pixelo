@model IEnumerable<TestPixelo.Models.Bet>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    @if (Model.Any())
    {
        foreach (var item in Model)
        {
            <div class="grid-container">
                <div class="MatchDescription">
                    <span>@item.MatchDescription</span>
                </div>
                <div class="Rates">
                    <span>@item.RateOne</span>
                    <span>@item.RateDraw</span>
                    <span>@item.RateTwo</span>
                </div>
                <div class="Options">
                    @Html.ActionLink("Details", "Details", new { id = item.ID }, new { @class = "btn btn-info" })
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "btn btn-warning" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "btn btn-danger" })
                </div>
            </div>
        }
    }
    else
    {
        <div class="alert alert-dismissible alert-warning">
            <h4 class="alert-heading">Non &egrave; presente alcun evento</h4>
            <p class="mb-0">
                <span>Si prega di eseguire entrambi gli script presenti nella cartella /Scripts/Sql</span>
            </p>
        </div>
    }
</div>